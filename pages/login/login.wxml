<!--pages/login/login.wxml-->
<view class="page">
  <form bindsubmit="loginSuccess" report-submit="true">
    <view class="column">
      <text class="tip">身份证号：</text>
      <view class="inputColumn">
        <input type="number" name="id_num" placeholder='请输入身份证号码' placeholder-style="color:#969696" />
      </view>
    </view>
    <view class="column">
      <text class="tip">密码：</text>
      <view class="inputColumn">
        <input name="passwd" placeholder='请输入密码' placeholder-style="color:#969696" />
      </view>
    </view>
    <button class="button" formType="submit" style='margin-top:30rpx;'>登录</button>
  </form>
</view>